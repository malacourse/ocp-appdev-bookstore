library identifier: "pipeline-library@master",
retriever: modernSCM(
  [
    $class: "GitSCMSource",
    remote: "https://github.com/redhat-mal/pipeline-library.git"
  ]
)

openshift.withCluster() {
  env.APP_NAME = "sample-java"
  echo "Starting Pipeline for ${APP_NAME}..."
}


